<div class="row">
  <div class="col-sm-12 text-center">
    <img class="img" src="https://png.pngtree.com/element_origin_min_pic/17/07/12/65e86f92c986a1c4b757ffdbf7c5edc7.jpg"/>
    <h1>Eat-Da-Burger</h1>
    
  </div>

  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-5 text-center">
      <div class="row">
      </div>

      <ul>
        {{!-- check --}}
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-5 text-center">

      <div class="row">
      </div>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="row text-center">
  <div class="col-sm-1"></div>
  <div col="col-sm-5 text-center">
    <h2>Add a burger!</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devour?</label><br>
        {{!-- has been devoured checkboxes --}}
        <input type="radio" name="devoured" value="0" checked> Ready<br>
        <input type="radio" name="devoured" value="1"> Devour
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>
</div>